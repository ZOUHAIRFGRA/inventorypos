<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.fouiguira.pos.inventorypos.controllers.ProductsController">
    <content>
        <AnchorPane>
            <children>
                <VBox layoutX="20" layoutY="20" spacing="15">
                    <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-padding: 10;" text="Manage Products" textAlignment="CENTER" textFill="#333232" textOverrun="CENTER_ELLIPSIS">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin></Label>

                        <!-- Product Table -->
                        <TableView fx:id="productTable">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                                <TableColumn fx:id="colName" prefWidth="227.33333587646484" text="Name" />
                                <TableColumn fx:id="colCategory" prefWidth="94.33331298828125" text="Category" />
                                <TableColumn fx:id="colPrice" prefWidth="231.00003051757812" text="Price" />
                                <TableColumn fx:id="colStock" prefWidth="105.66668701171875" text="Stock" />
                            </columns>
                        </TableView>

                        <HBox spacing="15">
                            <!-- Product Image -->
                            <VBox>
                                <ImageView fx:id="productImage" fitHeight="150" fitWidth="150" />
                                <Label style="-fx-font-weight: bold;" text="Product Image" />
                            </VBox>

                            <!-- Product Details Form -->
                            <GridPane hgap="10" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>
                                <children>
                                    <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <JFXTextField fx:id="productNameField" promptText="Product Name" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                    <Label text="Category:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <!-- Category ComboBox -->
                                    <ComboBox fx:id="categoryComboBox" promptText="Select Category" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <JFXTextField fx:id="priceField" promptText="Price" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                    <Label text="Stock Quantity:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <JFXTextField fx:id="stockField" promptText="Stock Quantity" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                    <Label text="Image Path:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                    <JFXTextField fx:id="imagePathField" promptText="Image Path" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                                    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                                    <JFXTextArea fx:id="descriptionField" prefRowCount="3" promptText="Description" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                </children>
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>
                        </HBox>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="10">
                            <JFXButton fx:id="addButton" onAction="#handleAddProduct" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Add" />
                            <JFXButton fx:id="updateButton" onAction="#handleUpdateProduct" style="-fx-background-color: #FFA500; -fx-text-fill: white;" text="Update" />
                            <JFXButton fx:id="deleteButton" onAction="#handleDeleteProduct" style="-fx-background-color: #FF4444; -fx-text-fill: white;" text="Delete" />
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>
