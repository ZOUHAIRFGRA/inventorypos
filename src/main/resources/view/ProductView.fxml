<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.fouiguira.pos.inventorypos.controllers.ProductsController">
    <content>
        <AnchorPane style="-fx-background-color: #f4f4f4;">
            <children>
                <VBox layoutX="20" layoutY="20" spacing="20" style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <children>
                        <!-- Title -->
                        <Label alignment="CENTER" contentDisplay="CENTER"
                               style="-fx-font-size: 28; -fx-font-weight: bold; -fx-padding: 10; -fx-text-fill: #333333;"
                               text="Manage Products" textAlignment="CENTER" textOverrun="CENTER_ELLIPSIS">
                            <VBox.margin>
                                <Insets bottom="20" />
                            </VBox.margin>
                        </Label>

                        <!-- Search Bar -->
                        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-radius: 5; -fx-background-radius: 5;">
                            <Label text="Search:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" />
                            <JFXTextField fx:id="searchField" promptText="Enter product name..." onKeyReleased="#handleSearch" style="-fx-prompt-text-fill: #999999; -fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5;" />
                        </HBox>

                        <!-- Product Table -->
                        <TableView fx:id="productTable" style="-fx-border-color: #dddddd; -fx-border-radius: 5;">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="50" text="ID" style="-fx-alignment: CENTER;" />
                                <TableColumn fx:id="colName" prefWidth="180" text="Name" style="-fx-alignment: CENTER_LEFT;" />
                                <TableColumn fx:id="colCategory" prefWidth="100" text="Category" style="-fx-alignment: CENTER;" />
                                <TableColumn fx:id="colPrice" prefWidth="100" text="Price" style="-fx-alignment: CENTER_RIGHT;" />
                                <TableColumn fx:id="colStock" prefWidth="80" text="Stock" style="-fx-alignment: CENTER;" />
                                <TableColumn fx:id="colImage" prefWidth="75" text="Image" style="-fx-alignment: CENTER;" />
                            </columns>
                        </TableView>

                        <!-- Product Image and Details -->
                        <HBox spacing="20" style="-fx-padding: 10;">
                            <!-- Product Image -->
                            <VBox spacing="10" style="-fx-alignment: CENTER;">
                                <ImageView fx:id="productImage" fitHeight="150" fitWidth="150" style="-fx-border-color: #dddddd; -fx-border-radius: 5;" />
                                <HBox spacing="10" style="-fx-alignment: CENTER;">
                                    <JFXButton text="Select Image" onAction="#handleSelectImage" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5;" />
                                    <JFXTextField fx:id="imagePathField" promptText="Image Path" editable="false" style="-fx-prompt-text-fill: #999999; -fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5;" />
                                </HBox>
                            </VBox>

                            <!-- Product Details Form -->
                            <GridPane hgap="15" vgap="15" style="-fx-padding: 10;">
                                <columnConstraints>
                                    <ColumnConstraints halignment="RIGHT" />
                                    <ColumnConstraints hgrow="ALWAYS" />
                                </columnConstraints>
                                <children>
                                    <Label text="Product Name:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <JFXTextField fx:id="productNameField" promptText="Product Name" style="-fx-prompt-text-fill: #999999; -fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                    <Label text="Category:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <ComboBox fx:id="categoryComboBox" promptText="Select Category" onAction="#handleCategorySelection" style="-fx-prompt-text-fill: #999999; -fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                    <Label text="Price:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <JFXTextField fx:id="priceField" promptText="Price" style="-fx-prompt-text-fill: #999999; -fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                    <Label text="Stock Quantity:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <JFXTextField fx:id="stockField" promptText="Stock Quantity" style="-fx-prompt-text-fill: #999999; -fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                    <Label text="Description:" style="-fx-font-weight: bold; -fx-text-fill: #555555;" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                    <JFXTextArea fx:id="descriptionField" prefRowCount="3" promptText="Description" style="-fx-prompt-text-fill: #999999; -fx-background-color: white; -fx-border-color: #dddddd; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                </children>
                                <rowConstraints>
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                    <RowConstraints />
                                </rowConstraints>
                            </GridPane>
                        </HBox>

                        <!-- Buttons -->
                        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
                            <JFXButton fx:id="addButton" onAction="#handleAddProduct" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10 20;" text="Add" />
                            <JFXButton fx:id="updateButton" onAction="#handleUpdateProduct" style="-fx-background-color: #ffc107; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10 20;" text="Update" />
                            <JFXButton fx:id="deleteButton" onAction="#handleDeleteProduct" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 5; -fx-padding: 10 20;" text="Delete" />
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </content>
</ScrollPane>