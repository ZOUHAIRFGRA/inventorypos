<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXTableView?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.fouiguira.pos.inventorypos.controllers.CashierDashboardController"
      spacing="15" prefWidth="1000" prefHeight="600" style="-fx-padding: 20; -fx-background-color: #F5F5F5;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label fx:id="welcomeLabel" text="Welcome" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <MFXButton fx:id="logoutButton" text="Logout" onAction="#handleLogout" 
                   style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16 8 16; -fx-background-radius: 5;"/>
    </HBox>

    <!-- Search and Filter Section -->
    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #FFFFFF; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;">
        <VBox spacing="5">
            <Label text="Search Products" style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
            <MFXTextField fx:id="searchField" onAction="#handleSearch" prefWidth="250" promptText="Enter product name" 
                          style="-fx-background-color: #F0F0F0; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
        </VBox>
        <VBox spacing="5">
            <Label text="Category" style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
            <MFXComboBox fx:id="categoryComboBox" onAction="#handleCategorySelection" prefWidth="200" 
                         style="-fx-background-color: #F0F0F0; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
        </VBox>
        <MFXButton fx:id="addToCartButton" text="Add to Cart" onAction="#handleAddToCart" 
                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16 8 16; -fx-background-radius: 5;" VBox.vgrow="ALWAYS"/>
    </HBox>

    <!-- Simplified Product Table -->
    <VBox spacing="5">
        <Label text="Available Products" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <TableView fx:id="productTable" prefHeight="200" prefWidth="950"/>
    </VBox>

    <!-- Cart Section -->
    <VBox fx:id="cartVBox" spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label text="Cart" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <MFXTableView fx:id="cartTable" prefHeight="150" style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        <HBox fx:id="totalHBox" spacing="10" alignment="CENTER_RIGHT">
            <Label text="Total:" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
            <!-- cartTotalLabel added programmatically -->
        </HBox>
        <HBox spacing="15" alignment="CENTER">
            <VBox spacing="5">
                <Label text="Client Name" style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
                <MFXTextField fx:id="clientNameField" prefWidth="250" promptText="Enter client name (required)" 
                              style="-fx-background-color: #F0F0F0; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Payment Method" style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
                <MFXComboBox fx:id="paymentMethodComboBox" prefWidth="150" 
                             style="-fx-background-color: #F0F0F0; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>
            <MFXButton fx:id="checkoutButton" text="Checkout" onAction="#handleCheckout" 
                       style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16 8 16; -fx-background-radius: 5;"/>
            <MFXButton fx:id="clearCartButton" text="Clear Cart" onAction="#handleClearCart" 
                       style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16 8 16; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>

    <!-- Sales History -->
    <VBox spacing="10">
        <Label text="Recent Sales" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <MFXTableView fx:id="salesHistoryTable" prefHeight="150" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        <HBox alignment="CENTER_RIGHT">
            <MFXButton fx:id="printReceiptButton" text="Print Receipt" onAction="#handlePrintReceipt" 
                       style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16 8 16; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>

</VBox>