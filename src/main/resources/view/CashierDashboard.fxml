<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.image.ImageView?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.fouiguira.pos.inventorypos.controllers.CashierDashboardController"
      spacing="10" prefWidth="1000" prefHeight="600" style="-fx-padding: 15; -fx-background-color: #F5F5F5;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;">
        <Label fx:id="welcomeLabel" text="Welcome" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <HBox HBox.hgrow="ALWAYS"/>
        <MFXButton fx:id="logoutButton" text="Logout" onAction="#handleLogout" 
                   style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16 8 16; -fx-background-radius: 5;"/>
    </HBox>

    <!-- Main Layout: Products and Cart Side-by-Side -->
    <HBox spacing="10" VBox.vgrow="ALWAYS">
        <!-- Product Grid Section -->
        <VBox spacing="10" prefWidth="700" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <VBox spacing="5">
                    <Label text="Search Products" style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
                    <MFXTextField fx:id="searchField" onAction="#handleSearch" prefWidth="250" promptText="Enter product name" 
                                  style="-fx-background-color: #F0F0F0; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Category" style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
                    <MFXComboBox fx:id="categoryComboBox" onAction="#handleCategorySelection" prefWidth="200" 
                                 style="-fx-background-color: #F0F0F0; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
                </VBox>
            </HBox>
            <GridPane fx:id="productGrid" hgap="10" vgap="10" prefHeight="500" alignment="TOP_LEFT"/>
        </VBox>

        <!-- Cart Section -->
        <VBox fx:id="cartVBox" spacing="10" prefWidth="280" style="-fx-background-color: #FFFFFF; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
            <Label text="Cart" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
            <TableView fx:id="cartTable" prefHeight="400" style="-fx-background-color: #FAFAFA; -fx-border-color: #E0E0E0; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            <HBox fx:id="totalHBox" spacing="10" alignment="CENTER_RIGHT">
                <Label text="Total:" style="-fx-font-size: 16px; -fx-text-fill: #333333;"/>
                <!-- cartTotalLabel added programmatically -->
            </HBox>
            <VBox spacing="5">
                <Label text="Client Name" style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
                <MFXTextField fx:id="clientNameField" prefWidth="250" promptText="Enter client name (required)" 
                              style="-fx-background-color: #F0F0F0; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Payment Method" style="-fx-font-size: 12px; -fx-text-fill: #666666;"/>
                <MFXComboBox fx:id="paymentMethodComboBox" prefWidth="250" 
                             style="-fx-background-color: #F0F0F0; -fx-border-color: #CCCCCC; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 8;"/>
            </VBox>
            <HBox spacing="10" alignment="CENTER">
                <MFXButton fx:id="checkoutButton" text="Checkout" onAction="#handleCheckout" 
                           style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16 8 16; -fx-background-radius: 5;"/>
                <MFXButton fx:id="clearCartButton" text="Clear" onAction="#handleClearCart" 
                           style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 16 8 16; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>
    </HBox>

</VBox>