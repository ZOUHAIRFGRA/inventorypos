<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.fouiguira.pos.inventorypos.controllers.CashierManagementController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="300" style="-fx-padding: 20; -fx-background-color: #F5F5F5;">
    
    <Label text="Manage Cashiers" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <MFXTextField fx:id="usernameField" floatingText="Username" prefWidth="200" 
                  style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>

    <MFXPasswordField fx:id="passwordField" floatingText="Password (Optional)" prefWidth="200" 
                      style="-fx-font-size: 14px; -fx-background-color: white; -fx-border-color: #CCCCCC; -fx-border-radius: 5;"/>

    <VBox spacing="10" alignment="CENTER">
        <MFXButton fx:id="saveButton" text="Save / Reset" onAction="#handleSaveCashier" 
                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
        <MFXButton fx:id="clearButton" text="Clear" onAction="#handleClearForm" 
                   style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
    </VBox>

</VBox>