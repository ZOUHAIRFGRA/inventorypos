<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.fouiguira.pos.inventorypos.controllers.CashierManagementController"
      alignment="CENTER" spacing="20" prefWidth="400" prefHeight="400" style="-fx-padding: 20; -fx-background-color: #F5F5F5;">
    
    <Label text="Manage Cashiers" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

    <MFXTextField fx:id="usernameField" floatingText="Username" prefWidth="300" 
                  style="-fx-font-size: 14px;" 
                  styleClass="mfx-text-field"
                  floatMode="BORDER"
                  borderGap="0"
                  selectable="true"/>

    <MFXPasswordField fx:id="passwordField" floatingText="Password (Optional)" prefWidth="300" 
                      style="-fx-font-size: 14px;"
                      styleClass="mfx-password-field"
                      floatMode="BORDER"
                      borderGap="0"/>

    <VBox fx:id="passwordResultBox" visible="false" spacing="10" alignment="CENTER" style="-fx-background-color: #EBF5FB; -fx-padding: 15; -fx-background-radius: 5;">
        <Label text="Generated Password" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>
        <HBox spacing="10" alignment="CENTER">
            <MFXTextField fx:id="generatedPasswordField" editable="false" prefWidth="200"
                         style="-fx-font-size: 14px; -fx-background-color: white;"/>
            <MFXButton fx:id="copyPasswordButton" text="Copy" onAction="#handleCopyPassword"
                       style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
    </VBox>

    <VBox spacing="10" alignment="CENTER">
        <MFXButton fx:id="saveButton" text="Save / Reset" onAction="#handleSaveCashier" 
                   style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
        <MFXButton fx:id="clearButton" text="Clear" onAction="#handleClearForm" 
                   style="-fx-background-color: #E91E63; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8 20 8 20; -fx-background-radius: 5; -fx-cursor: hand;"/>
    </VBox>

</VBox>