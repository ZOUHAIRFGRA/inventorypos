<?xml version="1.0" encoding="UTF-8"?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.fouiguira.pos.inventorypos.controllers.EditCategoryController"
prefHeight="350" maxHeight="350"
prefWidth="400" maxWidth="450" style="-fx-padding: 20; -fx-background-color: white;">
    <MFXTextField fx:id="categoryNameField" floatingText="Category Name" prefWidth="300"/>
    <TextArea fx:id="descriptionField" promptText="Description" prefWidth="300" prefHeight="100"/>
    <HBox alignment="CENTER" spacing="20">
        <MFXButton fx:id="saveButton" text="Save" onAction="#handleSaveCategory" styleClass="button-primary"/>
        <MFXButton fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="button-secondary"/>
    </HBox>
</VBox>